.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.avatar-container {
  width: 100%;
  height: 600rpx;
  background-color: #000;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 40rpx;
  position: relative;
}

.avatar-canvas {
  width: 100%;
  height: 100%;
}

.status-overlay {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  background-color: rgba(0, 0, 0, 0.6);
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
}

.speaking-indicator {
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
}

.connection-status {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
}

.connection-status.connected {
  background-color: rgba(0, 128, 0, 0.6);
}

.connection-status.disconnected {
  background-color: rgba(255, 0, 0, 0.6);
}

.connected-text, .disconnected-text {
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
}

.status-section {
  width: 100%;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.status-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.status-item:last-child {
  margin-bottom: 0;
}

.status-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.status-value {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.control-section {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  gap: 15rpx;
  margin-bottom: 30rpx;
}

.slider-container {
  width: 100%;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.slider-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.volume-slider {
  width: 100%;
}

.text-input {
  width: 100%;
  height: 120rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  border: 1px solid #ddd;
  font-size: 28rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
}

.toggle-section {
  width: 100%;
  margin-bottom: 20rpx;
}

.toggle-btn {
  width: 100%;
  background-color: #2196F3;
  color: white;
  border-radius: 8rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  font-size: 28rpx;
}

.toggle-arrow {
  font-size: 32rpx;
  line-height: 1;
}

.advanced-controls {
  width: 100%;
  margin-bottom: 30rpx;
}

.control-group {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 15rpx;
}

.control-btn {
  flex: 1;
  min-width: 150rpx;
  height: 80rpx;
  margin: 5rpx;
  font-size: 26rpx;
  border-radius: 8rpx;
}

.init-btn {
  background-color: #4CAF50;
  color: white;
}

.start-btn {
  background-color: #2196F3;
  color: white;
}

.speak-btn {
  background-color: #FF9800;
  color: white;
}

.stop-btn {
  background-color: #f44336;
  color: white;
}

.invisible-btn {
  background-color: #9C27B0;
  color: white;
}

.visible-btn {
  background-color: #673AB7;
  color: white;
}

.layout-btn {
  background-color: #FF5722;
  color: white;
}

.session-btn {
  background-color: #795548;
  color: white;
}

.animation-play-btn {
  background-color: #009688;
  color: white;
}

.animation-stop-btn {
  background-color: #00796B;
  color: white;
}

.resource-load-btn {
  background-color: #3F51B5;
  color: white;
}

.destroy-btn {
  background-color: #607D8B;
  color: white;
}

.info-section {
  width: 100%;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.info-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.info-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 30rpx;
}

.info-features {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.info-feature-item {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  margin-left: 20rpx;
}

/* 响应式调整 */
@media (max-width: 768px) {
  .control-section {
    flex-direction: column;
  }
  
  .control-btn {
    width: 100%;
  }
}