{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "wechat-miniprogram"
    ]
  },
  "include": [
    "src/index.ts",
    "src/simple-avatar.ts",
    "src/adapters/**/*",
    "src/utils/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "examples",
    "src/miniprogram-sdk.ts",
    "src/miniprogram-avatar.ts",
    "src/core/**/*",
    "../src/**/*"
  ]
}